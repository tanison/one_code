.wrapper
  %h1 one_code

  = render partial: 'code', collection: @codes

  -# - @codes.each do |code|

  = form_with(model: @code, url: "/codes", method: :post, local: true) do |f|

    .form

      .form-group
        = f.label :Name
        %span.form__group
        = f.text_field :name, autofocus: true, autocomplete: "off", class: 'field-input', placeholder: "例）hello"

        = f.label :Program
        %span.form-group
        = f.text_field :program, autofocus: true,autocomplete: "off", class: 'field-input', placeholder: "例）world"

      = f.submit "保存", class: 'btn btn-primary'



